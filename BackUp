            if (session.screen === "LOGIN_PW") {
                var userData = Database.data[session.tempId];
                if (userData.pw === msg) {
                    session.data = userData; 
                    SessionManager.reset(session);
                    return replier.reply(UI.make("ì„±ê³µ", "ì„±ê³µì ìœ¼ë¡œ ë¡œê·¸ì¸ë˜ì—ˆìŠµë‹ˆë‹¤.", "ë©”ë‰´ë¥¼ ì…ë ¥í•˜ì—¬ ì‹œì‘í•˜ì„¸ìš”.", true));
